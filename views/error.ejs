<% layout('layouts/boilerplate') %>

    <div class="alert alert-danger" role="alert">
        <div class="row col-6 offset-3">
            <div class="">
                <h4 class="alert-heading">
                    <%= err.message %>
                </h4>
                <% if (process.env.NODE_ENV !=='production' ) { %>
                    <p class="text-wrap">
                        <%= err.stack %>
                    </p>
                    <% } %>
            </div>
        </div>
    </div>